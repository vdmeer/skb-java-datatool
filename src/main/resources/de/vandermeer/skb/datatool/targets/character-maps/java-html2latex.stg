package <if(context.javaPackage)><context.javaPackage><else>org.test.charachter.translator<endif>;

import org.apache.commons.lang3.StringUtils;

import de.vandermeer.skb.interfaces.CharacterTranslator;

/**
 * Translator for HTML characters to LaTeX.
 *
 * @author     Sven van der Meer &lt;vdmeer.sven@mykolab.com&gt; - auto-generated by SKB Datatool from SKB CharacterMap data
 * @version    v0.0.1 build 151209 (09-Dec-15)
