 */
public class <if(context.javaClassname)><context.javaClassname><else>X2Y_Translator<endif> implements CharacterTranslator {

	/** Array of source strings. */
	protected String[] sourceArray = new String[]{
		<entry:{e | <if(e.htmlCode&&e.htmlEntity)>"<e.htmlCode>", "<e.htmlEntity>"<elseif(e.htmlCode)>"<e.htmlCode>"<elseif(e.htmlEntity)>"<e.htmlEntity>"<endif>}; separator=", ">
	};

	/** Array of target strings. */
	protected String[] targetArray = new String[]{
		<entry:{e | <if(e.htmlCode&&e.htmlEntity)>"<e.latex>", "<e.latex>"<elseif(e.htmlCode)>"<e.latex>"<elseif(e.htmlEntity)>"<e.latex>"<endif>}; separator=", ">
	};

	@Override
	public String translateCharacters(String input){
		return StringUtils.replaceEach(input, this.sourceArray, this.targetArray);
	}
}

